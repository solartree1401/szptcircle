<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#9e5cd0"
        >
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/tv_backtran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="12dp"
            android:text="返回"
            android:textColor="@color/skin_text_white"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="原文"
        android:layout_gravity="center"
        android:textColor="@color/black"
       />

    <EditText
        android:id="@+id/ts_ori"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_border_black"
        android:textColor="@color/black"
         />
    <Button
        android:id="@+id/btn_ct"
        android:layout_width="wrap_content"
        android:background="@drawable/shape_register_btn"
        android:layout_height="wrap_content"
        android:text="点我翻译"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
   />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/ts_result"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:background="@drawable/shape_border_black"
        android:textColor="@color/black"
  />




</LinearLayout>