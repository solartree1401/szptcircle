<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zhang.szptcircle.activity.TextRecognitionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#9e5cd0"
        >
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/back"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="12dp"
        android:text="返回"
        android:textColor="@color/skin_text_white"
        android:textSize="18sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgOCR"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ocr" />

    <Button
        android:id="@+id/btnOCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="开始识别" />

    <EditText
        android:id="@+id/etInform"
        android:layout_width="380dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:hint="识别结果"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:background="@drawable/shape_border_black"
        android:saveEnabled="false"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>